@model EditViewModel

<h2>Edit User</h2>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div class="mb-3">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="card mb-3">
        <div class="card-header">Password Update</div>
        <div class="card-body">
            <div class="m-3">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control" />
            </div>
            <div class="m-3">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
            </div>
        </div>

    </div>

    <div class="card">
        <div class="card-header">Roles</div>
        <div class="card-body">
            @foreach(var role in ViewBag.Roles)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role" id="@role" 
                    @(Model.SelectedRoles != null && Model.SelectedRoles.Any(r => r == role) ? "checked" : "") 
                     />
                    <label for="@role" class="form-check-label">@role</label>
                </div>
            }
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>