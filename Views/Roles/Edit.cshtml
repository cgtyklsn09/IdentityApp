@model AppRole

<h2>Edit Role</h2>
<hr />
<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary mb-3">Save</button>
</form>

<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Full name</th>
            <th>Email</th>
            <th style="width:80px"></th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Users.Count == 0)
        {
            <tr><td colspan="5" class="text-center">No user</td></tr>
        }

        @foreach (var user in ViewBag.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" method="post" style="display: inline-block" onsubmit="return confirm('Are you sure to delete user?')">
                        <input type="hidden" name="Id" value="@user.Id" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>