@model IEnumerable<AppRole>

<a class="btn btn-primary" asp-action="Create">Create Role</a>
<hr />
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role name</th>
            <th>Users</th>
            <th style="width:125px"></th>
        </tr>
    </thead>


    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No role</td></tr>
        }

        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" method="post" style="display: inline-block" onsubmit="return confirm('Are you sure to delete role?')">
                        <input type="hidden" name="Id" value="@role.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>